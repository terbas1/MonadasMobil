<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bg">

    <LinearLayout
        android:id="@+id/email_login_form"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:background="@drawable/icon"
            android:layout_marginLeft="5dp"
            android:layout_margin="50dp"/>
        <!-- Login Panel !-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp">
            <!-- Icon Layaout -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/paraborder_bg"
                android:layout_marginVertical="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|center_vertical"
                    >
                <ImageView
                    android:src="@drawable/email"
                    android:scaleType="fitCenter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    />
                </LinearLayout>
                <!-- Bottom Border !-->
                <LinearLayout
                    android:orientation="vertical"
                    android:background="#000"
                    android:layout_width="match_parent"
                    android:layout_height="1dp">
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_horizontal|center_vertical"
                    >

                    <ImageView
                        android:src="@drawable/candado"
                        android:scaleType="fitCenter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <!-- Edit Text Layaout-->
            <LinearLayout
                android:background="@drawable/white_rigth_corner_bg"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:hint="CORREO"
                        android:inputType="textEmailAddress"
                        android:textSize="16dp" />
                </LinearLayout>

                <!-- Border -->
                <LinearLayout
                    android:background="#979797"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></LinearLayout>
<!-- Contraseña -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="59dp">
                    <EditText
                        android:id="@+id/password"
                        android:hint="CONTRASEÑA"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="10"
                        android:textSize="16dp"
                        android:inputType="textPassword"
                        android:background="@android:color/transparent"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!--Button-->
        <Button
            android:id="@+id/btn_login"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:text="INGRESAR"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/black_button_bg"
            />
        <!-- Registor por siacaso -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_login"
                android:text="Te olvidaste tu contraseña"
                android:textSize="13sp"
                android:paddingLeft="5dp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </LinearLayout>

    </ScrollView>

</LinearLayout>